@model Video.Models.Infovideo


<br>
   <div class="card mb-3" style="max-width: 1000px; border:5px solid black">
        <div class="row no-gutters">
            <div class="col-md-4">
                <br>
                @Html.Raw("<img style='width:120px; height:100px;' src=\"data:image/jpeg;base64,"
                        + Convert.ToBase64String(@Model.Poster) + "\" />")
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(model => model.Date)</h5>
                    <h5 class="card-title">Год: @Html.DisplayFor(model => model.Date)</h5>
                    <p class="card-text">Режиссер: @Html.DisplayFor(model => model.Producer)</p>
                    <p class="card-text"> @Html.DisplayFor(model => model.Opisanie)</p>

                </div>
            </div>
        </div>
    </div>
   <div>
       <form asp-action="Edit" method="get">
           <div class="input-group">
               
                   <div class="form-group">
                       <input id="Id" name="Id" type="hidden" value="@Model.Id" />
                   </div>
             <div class="col-md-11">
                   <div class="form-group">
                       <input type="text" class="form-control" placeholder="Введите имя пользователя, чтобы изменить фильм" aria-label="User" name="User">

                    </div>
             </div>  
               <div class="col-md-1">
                   <div class="form-group">
                       <input type="submit" value="Изменить данные о фильме" class="btn btn-default"  />
                   </div>
               </div>
           </div>
       </form>
   </div>
<div>
 <br><br>
    <a asp-action="Index">Вернуться на главную страницу</a>
</div>
