@model ReflectionIT.Mvc.Paging.PagingList<Video.Models.Infovideo>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

<br><br>
@foreach (var item in Model)
{
    <div class="card mb-3" style="max-width: 1000px; border:5px solid black">
        <div class="row no-gutters">
            <div class="col-md-4">
                <br>
                @Html.Raw("<img style='width:120px; height:100px;' src=\"data:image/jpeg;base64,"
                        + Convert.ToBase64String(item.Poster) + "\" />")
       
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.ActionLink(item.Name, "Details", new { id = item.Id }, new { @class = "ms-Button ms-Button--default", style = "border:1px solid #d7d4d4;text-decoration:none" })</h5>
                    <h5 class="card-title">Год: @Html.DisplayFor(modelItem => item.Date)</h5>
                    <p class="card-text">Режиссер: @Html.DisplayFor(modelItem => item.Producer)</p>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.Opisanie)</p>

                </div>
            </div>
        </div>
    </div>


 

}
<nav aria-label="Suppliers navigation example">
    <ul class="pagination justify-content-center" />
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })

</nav>